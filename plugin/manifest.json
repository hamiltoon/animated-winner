{
  "manifest_version": 3,
  "name": "Recipe Saver",
  "version": "1.1",
  "description": "Extract and save recipes from web pages",
  "permissions": [
    "activeTab",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "https://recipe-saver-api.hamiltoon.workers.dev/*",
    "https://github.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "oauth2": {
    "client_id": "Ov23linhqwiqRIB7923L.chromiumapp.org",
    "scopes": ["user:email"]
  }
}
